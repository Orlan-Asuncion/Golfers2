  
<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%= golfer.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/golfers/<%= golfer._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="golfer[name]" value="<%= golfer.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="golfer[image]" value="<%= golfer.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="golfer[description]" value="<%= golfer.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/golfers">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>